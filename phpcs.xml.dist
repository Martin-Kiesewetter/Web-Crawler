<?xml version="1.0"?>
<ruleset name="ScreamingFrog">
    <description>PHP_CodeSniffer configuration</description>

    <!-- Use PSR-12 coding standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>src</file>
    <file>tests</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Show progress and colors -->
    <arg name="colors"/>
    <arg value="sp"/>
</ruleset>
